%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et

%% options
{cover_enabled, true}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{edoc_opts, [{preprocess, true}]}.
{erl_opts, [debug_info, fail_on_warning]}.
{require_otp_vsn, "R15|R16|17"}.

%% libs
{sub_dirs, [
    "apps/couch",
    "apps/couch_index",
    "apps/couch_mrview",
    "apps/couch_httpd",
    "apps/couch_replicator",
    "apps/couch_dbupdates",
    "apps/couch_randomdoc",
    "apps/geocouch",
    "support/couch_rel",
    "rel"]}.

{lib_dirs, [
    "deps/elixir/lib"
]}.

{deps, [
    {mochiweb,  ".*",
     {git, "https://github.com/mochi/mochiweb.git",
      {tag, "v2.9.2 "}}},

    {oauth,  ".*",
     {git, "https://github.com/rcouch/couchdb-oauth",
      {tag, "1.3.0"}}},

    {ibrowse, ".*",
     {git, "https://github.com/rcouch/ibrowse",
      {tag, "RC-1.0.0"}}},

    {hackney, ".*",
     {git, "https://github.com/benoitc/hackney",
      {tag, "1.0.3"}}},


    {node_package, ".*",
     {git, "https://github.com/rcouch/node_package.git",
      {tag, "rcouch-2.0.1"}}},

    {rebar_elixir_plugin, ".*",
     {git, "https://github.com/yrashk/rebar_elixir_plugin.git"}},

    {elixir, ".*",
     {git, "https://github.com/elixir-lang/elixir",
      {tag, "v1.0.4"}}}
]}.

{plugins, [rebar_elixir_compiler, rebar_exunit]}.

%% build hooks
{post_hooks, [{compile, "escript support/build_js.escript"}]}.
